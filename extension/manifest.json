{
  "manifest_version": 3,
  "name": "Scam Detector",
  "version": "1.0",
  "description": "Detects scam images in posts and alerts users.",
  "permissions": ["activeTab", "storage", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.instagram.com/*", "*://*.facebook.com/*", "*://*.x.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}

